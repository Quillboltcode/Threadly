

{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "baseUrl": "src",
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "typeRoots": ["src/types"]
  },
  "include": ["src/**/*","src/types/**/*"],
  "exclude": ["node_modules"]
}


